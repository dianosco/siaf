{
	"name": "pl_201_IngestSqlTable_SAMI",
	"properties": {
		"activities": [
			{
				"name": "Copy table to Landing zone",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "Get Source parameters",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "1:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "AzureSqlSource",
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"sink": {
						"type": "ParquetSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "ParquetWriteSettings"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "ds_AzSqlTable_SAMI",
						"type": "DatasetReference",
						"parameters": {
							"pa_serverName": "unservidorcualquiera.database.windows.net",
							"pa_databaseName": "unadatabasecualquiera",
							"pa_tableSchema": "SalesLT",
							"pa_tableName": "ProductModel"
						}
					}
				],
				"outputs": [
					{
						"referenceName": "ds_AzStAccParquet_SAMI",
						"type": "DatasetReference"
					}
				]
			},
			{
				"name": "Get Source parameters",
				"type": "Lookup",
				"dependsOn": [
					{
						"activity": "Set Control Server Name",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "1:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "AzureSqlSource",
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"dataset": {
						"referenceName": "ds_ControlDb",
						"type": "DatasetReference",
						"parameters": {
							"pa_serverName": {
								"value": "@variables('va_controlServerName')",
								"type": "Expression"
							},
							"pa_databaseName": "siafcustnamesqldatabase",
							"pa_tableSchema": "control",
							"pa_tableName": "vw_EnvironmentParameters"
						}
					},
					"firstRowOnly": true
				}
			},
			{
				"name": "Set Control Server Name",
				"type": "SetVariable",
				"dependsOn": [],
				"policy": {
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"variableName": "va_controlServerName",
					"value": {
						"value": "@concat(\n    'siaf'\n    ,pipeline().globalParameters.gp_environment\n    ,pipeline().globalParameters.gp_custName\n    ,'sqlserver.database.windows.net'\n)",
						"type": "Expression"
					}
				}
			}
		],
		"parameters": {
			"pa_artifactName": {
				"type": "string"
			},
			"pa_sourceName": {
				"type": "string"
			}
		},
		"variables": {
			"va_controlServerName": {
				"type": "String"
			}
		},
		"folder": {
			"name": "200_Ingestion"
		},
		"annotations": []
	}
}